{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "pre-commit": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "pip install yq",
      "NEW_VER=$(yq -r .nautobot.image.tag charts/nautobot/values.yaml) sed -i \"s@appVersion: \\\".*\\\"@appVersion: \\\"${NEW_VER}\\\"@\" charts/nautobot/Chart.yaml",
      "NEW_VER=$(yq -r .nautobot.image.tag charts/nautobot/values.yaml) sed -i \"s@nautobot/nautobot:.*@nautobot/nautobot:${NEW_VER}@\" charts/nautobot/Chart.yaml",
      "GO111MODULE=on go install github.com/norwoodj/helm-docs/cmd/helm-docs@latest",
      "$HOME/go/bin/helm-docs"
    ],
    "fileFilters": [
      "**/README.md",
      "**/Chart.yaml"
    ]
  }
}
