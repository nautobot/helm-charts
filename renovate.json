{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pre-commit": {
    "enabled": true
  },
  "baseBranchPatterns": [
    "develop",
    "next"
  ],
  "packageRules": [
    {
      "description": "Disable python updates in the develop branch.",
      "matchBaseBranches": [
        "develop"
      ],
      "matchPackageNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "description": "Disable minor and major updates in the develop branch.",
      "matchBaseBranches": [
        "develop"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "enabled": false
    },
    {
      "description": "Weekly patch updates in the develop and next branch.",
      "matchBaseBranches": [
        "develop",
        "next"
      ],
      "matchPackageNames": [
        "!python"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "Patch Updates",
      "schedule": [
        "before 3am on Monday"
      ],
      "enabled": true
    },
    {
      "description": "Monthly major updates in the next branch.",
      "matchBaseBranches": [
        "next"
      ],
      "matchPackageNames": [
        "!python"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "schedule": [
        "before 3am on the first day of the month"
      ],
      "enabled": true
    },
    {
      "description": "Bi-weekly minor updates in the next branch.",
      "matchBaseBranches": [
        "next"
      ],
      "matchPackageNames": [
        "!python"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "Minor Updates",
      "schedule": [
        "before 3am every 2 weeks on Monday"
      ],
      "enabled": true
    }
  ]
}
