{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "pre-commit": {
    "enabled": true
  },
  "allowedCommands": [
    "scripts/update_version.sh \"{{{prTitle}}}\""
  ],
  "postUpgradeTasks": {
    "commands": [
      "scripts/update_version.sh \"{{{prTitle}}}\""
    ],
    "fileFilters": [
      "**/README.md",
      "**/Chart.yaml",
      "CHANGELOG.md"
    ]
  }
}
